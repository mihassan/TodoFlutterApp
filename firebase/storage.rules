rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User-scoped attachments: only the owner can read/write
    match /users/{userId}/attachments/{allPaths=**} {
      // Anyone authenticated as this user can read their files
      allow read: if request.auth != null
        && request.auth.uid == userId;

      // Writes: owner only, with size and content-type restrictions
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // 10 MB max
        && request.resource.contentType.matches('image/.*|application/pdf|text/plain');
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
